{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with web}}
    {{> title data="Languages" big=true}}
    <br>
    <hr>
    <ol>
        <li>
            <b><em>{{languages.[0].name}}</em></b>
            <br>
            <b>Version:</b><em>{{languages.[0].version}}</em>
            <br>
            <b>Description:</b><em>{{languages.[0].description}}</em>
            {{> title data="Elements"}}
            <ul>
                {{#each languages.[0].elements}}
                <li>
                    <b>Name:</b> {{name}}
                    <br>
                    <b>Description:</b> {{description}}
                    <br>
                    {{> title data="Attributes"}}
                    <ul>
                        {{#each attributes}}
                        <li>
                            <b>Name:</b> {{name}}
                            <br>
                            <b>Description:</b> {{description}}
                            <br>
                        </li>
                        {{/each}}
                        <br>
                    </ul>
                </li>
                {{/each}}
            </ul>
        </li>
        <br>
        <hr>
        <li>
            <b><em>{{languages.[1].name}}</em></b>
            <br>
            Version: <em>{{languages.[1].version}}</em>
            <br>
            Description: <em>{{languages.[1].description}}</em>
            {{> title data="Properties"}}
            <ul>
                {{#each languages.[1].properties}}
                <li>
                    <b>Name:</b> {{name}}
                    <br>
                    <b>Description:</b> {{description}}
                    <br>
                    {{> title data="Values"}}
                    <ul>
                        {{#each values}}
                        <li>
                            <b>Value:</b> {{value}}
                            <br>
                            <b>Description:</b> {{description}}
                            <br>
                        </li>
                        {{/each}}
                        <br>
                    </ul>
                </li>
                {{/each}}
            </ul>
            <ul>
                {{#each languages.[2].properties}}
                <li>
                    <b>Name:</b> {{name}}
                    <br>
                    <b>Description:</b> {{description}}
                    <br>
                    {{> title data="Values"}}
                    <ul>
                        {{#each values}}
                        <li>
                            <b>Value:</b> {{value}}
                            <br>
                            <b>Description:</b> {{description}}
                            <br>
                        </li>
                        {{/each}}
                        <br>
                    </ul>
                </li>
                {{/each}}
            </ul>
        </li>
        <br>
        <hr>
        <li>
            <b><em>{{languages.[2].name}}</em></b>
            <br>
            Version: <em>{{languages.[2].version}}</em>
            <br>
            Description: <em>{{languages.[2].description}}</em>
            {{> title data="Functions"}}
            <ul>
                {{#each languages.[2].functions}}
                <li>
                    <b>Name:</b> {{name}}
                    <br>
                    <b>Description:</b> {{description}}
                    <br>
                    {{> title data="Parameters"}}
                    <ul>
                        {{#each parameters}}
                        <li>
                            <b>Name:</b> {{name}}
                            <br>
                            <b>Type:</b> {{type}}
                            <br>
                            <b>Description:</b> {{description}}
                            <br>
                        </li>
                        {{/each}}
                        <br>
                    </ul>
                </li>
                {{/each}}
            </ul>
        </li>
        </li>
    </ol>
    {{/with}}
</div>

