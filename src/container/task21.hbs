{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    <div class="card">
        <div class="card-body">
            <div class="card">
                <div class="card-body">
                    {{#with heading}}
                    {{#with main}}
                    <div class="display-3"><b>{{title}}</b></div>
                    <br>
                    <p class="text-muted">{{text}}</p>
                    <br>
                    <button class="btn btn-primary">
                        <span class="text-uppercase">{{button_text.solid}}</span>
                    </button>
                    <br>
                    <br>
                    <button class="btn btn-outline-primary">
                        <span class="text-uppercase">{{button_text.outline}}</span>
                    </button>
                    {{/with}}
                    {{/with}}
                </div>
            </div>
            <br>
            <br>
            <div class="card">
                <div class="card-body">
                    {{#with heading}}
                    {{#with second}}
                    <div class="display-4"><b>{{title}}</b></div>
                    <br>
                    <p>{{text}}</p>
                    <br>
                    <button class="btn btn-secondary">
                        <span class="text-uppercase">{{button_text.solid}}</span>
                    </button>
                    <br>
                    <br>
                    <button class="btn btn-outline-secondary">
                        <span class="text-uppercase">{{button_text.outline}}</span>
                    </button>
                    {{/with}}
                    {{/with}}
                </div>
            </div>
            <br>
            <br>
            <div class="card">
                <div class="card-body">
                    {{#with heading}}
                    {{#with subblock}}
                    <div class="display-5"><b>{{title}}</b></div>
                    <br>
                    <p>{{text}}</p>
                    <br>
                    <button class="btn btn-dark">
                        <span class="text-uppercase">{{button_text.solid}}</span>
                    </button>
                    <br>
                    <br>
                    <button class="btn btn-outline-dark">
                        <span class="text-uppercase">{{button_text.outline}}</span>
                    </button>
                    {{/with}}
                    {{/with}}
                </div>
            </div>
        </div>
    </div>
    <br>
    <br>
    <div class="card">
        <div class="card-body">
            {{#with nested_display}}
            <div class="display-1"><b>{{title}}</b></div>
            <br>
            <div class="card">
                <div class="card-body">
                    {{#with children_display}}
                    <div class="display-4"><b>{{title}}</b></div>
                    <br>
                    <p class="text-muted">{{text}}</p>
                    <br>
                    <button class="btn btn-outline-warning">
                        <span class="text-uppercase">{{button.text}}</span>
                    </button>
                    {{/with}}
                </div>
            </div>
            <br>
            <br>
            <div class="display-6"><b>{{header_text}}</b></div>
            <br>
            <button class="btn btn-info">
                <span class="text-uppercase">{{button.text}}</span>
            </button>
            <br>
            {{/with}}
        </div>
    </div>
    <br>
    <br>
    <div class="card">
        <div class="card-body">
            {{#with paragraph}}
            <div class="text-uppercase">{{title}}</div>
            <br>
            <div class="text-lowercase">{{text}}</div>
            <br>
            {{#with button}}
            <a href="https://google.com" class="btn btn-link">{{text}}</a>
            {{/with}}
        </div>
        <br>
        <div class="card">
            <div class="card-body">
                {{#each list_name}}
                <ul>
                    <li>
                        <a href="https://github.com/" href="https://getbootstrap.com/" class="btn btn-link">{{text}}</a>
                    </li>
                </ul>
                {{/each}}
            </div>
        </div>
        <br>
        {{/with}}
    </div>
</div>
