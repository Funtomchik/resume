{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<main>
    <section>
        {{#with navigation}}
        <div class="row g-1">
            {{#each links}}
            <div class="col-3">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                <a href="{{href}}" class="btn btn-link">{{text}}</a>
                            </th>
                        </tr>
                    </thead>
                </table>
            </div>
            {{/each}}
            <div class="col-3">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                <a href="{{button.href}}" class="btn btn-primary"
                                    class="btn btn-link">{{button.text}}</a>
                            </th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
        {{/with}}
    </section>

    <br>

    <section>
        {{#with header}}
        <div class="text-capitalize">
            <h1>{{title}}</h1>
            <br>
            <p class="text-muted">{{description}}</p>
            <br>
            <a href="{{button.link}}" class="btn btn-primary" class="btn btn-link">{{button.text}}</a>
        </div>
        {{/with}}
    </section>

    <hr>

    <section>
        {{#with city}}
        <div class="text-capitalize">
            <h2>{{title}}</h2>

            <br>

            <div class="row gy-3 gx-3">
                {{#each cards}}
                <div class="col-6">
                    {{#with picture}}
                    <img class="card-img-top" src="{{src}}" alt="{{alt}}">
                    {{/with}}
                    <div class="card-body">

                        <br>

                        <div class="card-header"><b>{{title}}</b></div>

                        <br>

                        <p>{{description}}</p>

                        <a href="{{button.href}}" class="btn btn-primary" class="btn btn-link">{{button.text}}</a>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
        {{/with}}
    </section>

    <hr>

    <section>
        {{#with winner}}
        <div class="text-capitalize">
            <h2>{{title}}</h2>

            <br>

            {{#with table}}
            <table class="table table-bordered">
                <thead>
                    <tr>
                        {{#each head}}
                        <th>
                            {{this}}
                        </th>
                        {{/each}}
                    </tr>
                </thead>
                {{#each user}}
                <tbody>
                    <tr>
                        <th>{{place}}</th>
                        <td>{{name}}</td>
                        <td>{{surname}}</td>
                        <td>{{nickname}}</td>
                    </tr>
                </tbody>
                {{/each}}
            </table>
            {{/with}}
        </div>
        {{/with}}
    </section>

    <hr>

    <section>
        {{#with gallery}}
        <div class="text-capitalize">
            <h2>{{title}}</h2>

            <br>

            <div class="row gy-1 gx-2">
                {{#each cards}}
                <section class="col-4">
                    <div class="card">
                        <div class="card-header">
                            <div>{{name}}</div>
                        </div>
                        {{#each items}}
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                {{this}}
                            </li>
                        </ul>
                        {{/each}}
                    </div>
                </section>
                {{/each}}
            </div>
        </div>
        {{/with}}
    </section>

    <hr>

    <section>
        {{#with relaxion}}
        <div class="display-3">{{title}}</div>

        <br>

        <div class="row gy-3 gx-3">
            {{#each cards}}
            <div class="col-6">
                <div class="card text-bg-secondary">
                    <div class="card-header">{{header}}</div>
                    <div class="card-body">
                        <h6 class="card-title">{{title}}</h6>
                        <p>{{description}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        {{/with}}
    </section>

    <hr>

    <section>
        {{#with rest}}
        <div class="row gy-3 gx-3">
            {{#each cards}}
            <div class="col-6">
                <div class="card text-bg-light">
                    <div class="card-header text-center">{{header}}</div>
                    <div class="card-body text-center">
                        <h6 class="card-title">{{title}}</h6>
                        <p>{{description}}</p>
                        <br>
                        <div class="btn btn-primary">{{button}}</div>
                    </div>
                    <div class="card-footer text-center">{{footer}}</div>
                </div>
            </div>
            {{/each}}
        </div>
        {{/with}}
    </section>

    <hr>

    <section>
        {{#with proposition}}
        <div class="display-2">{{title}}</div>

        <br>

        <div class="row gy-3 gx-3">
            {{#each card}}
            <div class="col-6">
                <div class="card text-bg-warning">
                    <div class="card-header">{{header}}</div>
                    <div class="card-body">
                        <h6 class="card-title">{{title}}</h6>
                        <p>{{description}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        {{/with}}
    </section>

    <hr>

    <section>
        {{#with footer}}
        <div class="text-capitalize">
            <h1>{{title}}</h1>
            <br>
            <div class="row gy-3 gx-3">
                {{#each navigation}}
                <div class="col-4">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    <a href="{{href}}" class="btn btn-outline-link">{{text}}</a>
                                </th>
                            </tr>
                        </thead>
                    </table>
                </div>
                {{/each}}
                {{#each socialMedia}}
                <div class="col-4">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    <a href="{{link}}" class="btn btn-outline-dark" class="btn btn-link">{{name}}</a>
                                </th>
                            </tr>
                        </thead>
                    </table>
                </div>
                {{/each}}
                {{#each partners}}
                <div class="col-4">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    <a href="{{link}}" class="btn btn-outline-info">{{name}}</a>
                                </th>
                            </tr>
                        </thead>
                    </table>
                </div>
                {{/each}}
            </div>
        </div>
        {{/with}}
    </section>
</main>

