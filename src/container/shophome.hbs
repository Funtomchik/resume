<main>
    <section>
        <div class="card">
            <div class="row">
                <div class="col-7">
                    <h2 class="ps-3">{{navigation.Logo}}</h2>
                </div>
                <div class="col-5">
                    <div class="nav">
                        {{#with navigation.links.[0]}}
                        <div class="nav-item">
                            <a href="https://github.com/" class="nav-link active">{{text}}</a>
                        </div>
                        {{/with}}
                        {{#with navigation.links.[1]}}
                        <div class="nav-item">
                            <a href="https://www.google.com/" class="nav-link">{{text}}</a>
                        </div>
                        {{/with}}
                        {{#with navigation.links.[2]}}
                        <div class="nav-item">
                            <a href="https://www.youtube.com/" class="nav-link disabled">{{text}}</a>
                        </div>
                        {{/with}}
                    </div>
                </div>
            </div>
        </div>
    </section>
    <br>
    <section>
        <div>
            {{#with newsBlock}}
            <h2 class="text-center">{{title}}</h2>

            <br>

            <div class="row g-4">
                {{#each cards}}
                <div class="col-3">
                    <div class="card text-bg-dark text-white">
                        <div class="card-header">{{title}}
                            {{#if isNew}}
                            <span class="badge rounded-pill text-bg-success p-1">isNew{{/if}}</span>

                            {{#if isTop}}
                            <span class="badge rounded-pill text-bg-danger p-1">isTop{{/if}}</span>

                        </div>
                        <h6 class="card-title">{{title}}</h6>
                        <p>{{description}}</p>
                    </div>
                </div>
                {{/each}}
            </div>
            {{/with}}
        </div>
    </section>

    <hr>

    <section>
        {{#with goodsBlock}}
        <div class="row g-4">
            <div class="col-12">
                <div class="nav nav-tabs">
                    {{#each tabs}}
                    <div class="nav-item">
                        {{#if isActiv}}
                        <a href="#" class="nav-link active">{{text}}</a>
                        {{else}}
                        <a class="nav-link {{#if isDisabled}} disabled {{/if}}" href="#">{{text}}</a>
                        {{/if}}
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
        <br>
        <div class="row gy-3 gx-3">
            {{#each cards}}
            <div class="col-4">
                <img class="card-img-top" src="{{image}}">
                <div class="card-body">
                    <br>
                    {{#if isHot}}
                    <span class="badge rounded-pill text-bg-success p-1">isHot</span>

                    {{#if isNew}}
                    <span class="badge rounded-pill text-bg-danger p-1">isNew{{/if}}</span>
                    <div class="card-header"><b>{{title}}</b></div>
                    {{/if}}
                    <br>

                    <p>{{description}}</p>
                </div>
            </div>
            {{/each}}
        </div>
        {{/with}}
    </section>

    <hr>

    <section>
        {{#with subscribe}}
        <div class="card">
            <div class="card-body text-bg-dark">
                <div class="col-12">
                    <ul class="nav nav-pils">
                        <li class="col-5">
                            <h2>{{header}}</h2>
                            <p class="mb-0">{{description}}</p>
                        </li>
                        {{#each buttons}}
                        <li class="m-2 ms-4 mt-3 me-0">
                            <a class="btn btn-primary" href="{{link}}" role="button">{{text}}</a>
                        </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
        {{/with}}
    </section>


    <hr>

    <section>
        <div class="card text-center ps-3 pb-3 pt-3 text-bg-success">
            {{#with service}}
            <div class="text-capitalize">
                <h2>{{title}}</h2>
                <br>
                <p class="text-outline-light">{{description}}</p>
                <br>
                {{#each buttons}}
                <a href="{{link}}" class="btn btn-primary" class="btn btn-link">{{text}}</a>
                {{/each}}
            </div>
            {{/with}}
        </div>
    </section>


    <hr>

    <section>
        <div class="row">
            {{#each footer}}
            <div class="nav col-2">
                <div>
                    {{#each this}}
                    <div>
                        <a class="nav-link {{#if @last}} disabled {{/if}}" href="{{this.link}}">{{this.text}}</a>
                    </div>
                    {{/each}}
                </div>
            </div>
            {{/each}}
        </div>
    </section>
</main>