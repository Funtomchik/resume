{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    <div>
        {{#with page_header}}
        <h1 class="text-center">
            <b>{{title}}</b>
        </h1>
        <br>
        <div class="text-center">
            <div class="text-uppercase">{{description}}</div>
        </div>
        {{/with}}
    </div>
    <br>
    <div class="card">
        <div class="card-body">
            {{#with section}}
            {{#with about_us}}
            {{#with title_list}}
            <div class="text-end">
                <div class="display-6">{{main}}</div>
            </div>
            <br>
            <h2 class="text-end">{{sub}}</h2>
            {{/with}}
            <br>
            <button class="btn btn-outline-info">
                <span class="text-uppercase">{{button.text}}</span>
            </button>
            {{/with}}
        </div>
    </div>
    <br>
    {{#with advantage}}
    <div class="card">
        <div class="card-body">
            <div class="display-5">{{title}}</div>
            <br>
            <div class="card">
                <div class="card-body">
                    {{#with efficiency}}
                    <div class="text-lowercase">
                        <div class="display-4">{{title}}</div>
                    </div>
                    <br>
                    <h6>{{sub_title}}</h6>
                    <br>
                    <p class="text-muted">{{description}}</p>
                    <br>
                    <button class="btn btn-outline-warning">
                        <span class="text-uppercase">{{button}}</span>
                    </button>
                    {{/with}}
                </div>
            </div>
            <br>
            <div class="card">
                <div>
                    {{#with innovation}}
                    <div class="text-center" class="text-lowercase">
                        <div class="display-4">{{title}}</div>
                    </div>
                    <br>
                    <h6 class="text-center">{{sub_title}}</h6>
                    <br>
                    <p class="text-center" class="text-muted">{{description}}</p>
                    <button class="btn btn-outline-warning">
                        <span class="text-uppercase">{{button}}</span>
                    </button>
                    {{/with}}
                </div>
                <br>
            </div>
            <br>
            {{#with collaboration}}
            <div class="card">
                <div>
                    <div class="text-end" class="text-lowercase">
                        <div class="display-4">{{title}}</div>
                    </div>
                    <br>
                    <h6 class="text-end">{{sub_title}}</h6>
                    <br>
                    <p class="text-end" class="text-muted">{{description}}</p>
                    <button class="btn btn-outline-warning">
                        <span class="text-uppercase">{{button}}</span>
                    </button>
                </div>
                <br>
            </div>
            {{/with}}
        </div>
        {{/with}}
    </div>
    <br>
    {{#with agreement}}
    <div class="card">
        <div class="card-body">
            <div class="text-lowercase">
                <div class="display-5">{{title}}</div>
            </div>
            <br>
            <div class="card">
                <div class="card-body">
                    {{#with info}}
                    <h6>{{sub_title}}</h6>
                    <br>
                    <div class="card">
                        <div class="card-body">
                            {{#with detail}}
                            <p class="text-muted">{{text}}</p>
                            <br>
                            <button class="btn btn-success">
                                {{button}}
                            </button>
                            {{/with}}
                        </div>
                    </div>
                    {{/with}}
                </div>
            </div>
            {{/with}}
            {{/with}}
        </div>
    </div>
</div>

